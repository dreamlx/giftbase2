<%% content_for :title_bar do %>
  <h1><%%= <%= class_name %>.model_name.human %></h1>
  <div class="toolbar">
    <%%= link_to t("edit", <%= key_value(:scope, '"crud"') %>), edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), <%= key_value :class, "'btn btn-primary'" %> %>
    <div class="btn-group">
      <button class="btn dropdown-toggle" data-toggle="dropdown"><%%= t("more", <%= key_value(:scope, '"crud"') %>) %> <span class="caret"></span></button>
      <ul class="dropdown-menu pull-right">
        <li><%%= link_to t("destroy", <%= key_value(:scope, '"crud"') %>), @<%= singular_table_name %>, <%= key_value :confirm, "t(\"destroy\", #{key_value(:scope, '"crud.confirmation"')})" %>, <%= key_value :method, ":delete" %> %></li>
      </ul>
    </div>
    <%%= link_to t("back", <%= key_value(:scope, '"crud"') %>), <%= index_helper %>_path, <%= key_value :class, "'btn'" %> %>
  </div>
<%% end %>

<dl class="dl-horizontal">
<% attributes.each do |attribute| -%>
  <dt><%%= <%= class_name %>.human_attribute_name(:<%= attribute.name %>) %></dt>
  <dd><%%= @<%= singular_table_name %>.<%= attribute.name %> %></dd>
<% end -%>
</dl>
