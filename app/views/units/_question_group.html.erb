<div class="clearfix">
  <div class="pull-left">
    <%= number_to_chinese question_group.position %>. <%= question_group.name %>
  </div>
  <div class="pull-right">

    <div class="btn-group">
      <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown"><%= t("new", scope: "crud") %> <span class="caret"></span></button>
      <ul class="dropdown-menu">
        <% Question.instanceable_classes.each do |klass| %>
          <li><%= link_to klass.model_name.human, new_admin_question_path(type: klass.name, unit_id: @unit.id, group_id: question_group.id) %></li>
        <% end -%>
      </ul>
    </div>
  </div>
</div>
<%= simple_format(h(question_group.description)) %>

<%= render '/admin/question_groups/selected', { unit: unit, question_group: question_group, question_line_items: question_group.question_line_items } %>

<hr/>
