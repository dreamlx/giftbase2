!!!
%html
  %head
    %title= t('app_name')
    = stylesheet_link_tag    "application", media: 'all'
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %header#header
      = render '/shared/topnav'
    #wrapper
      .container
        .content
          - if content_for?(:title_bar) || content_for?(:tabs)
            %div{:class => "page-header #{content_for?(:tabs) ? 'with-tabs' : ''}"}
              .titlebar
                = yield :title_bar
              = yield :tabs
          .page-content
            .row-fluid
              - if content_for?(:sidebar)
                .span3
                  .sidebar
                    = yield :sidebar
                .span9
                  .content-main
                    - unless alert.blank?
                      .alert.alert-error.fade.in
                        %a.close{"data-dismiss" => "alert"} &times;
                        = alert
                    - unless notice.blank?
                      .alert.alert-success.fade.in
                        %a.close{"data-dismiss" => "alert"} &times;
                        = notice
                    = yield
              - else
                .span12
                  .content-main
                    - unless alert.blank?
                      .alert.alert-error.fade.in
                        %a.close{"data-dismiss" => "alert"} &times;
                        = alert
                    - unless notice.blank?
                      .alert.alert-success.fade.in
                        %a.close{"data-dismiss" => "alert"} &times;
                        = notice
                    = yield
        %footer
          %p.powered_by= t :powered_by
        = debug(params) if Rails.env.development?
