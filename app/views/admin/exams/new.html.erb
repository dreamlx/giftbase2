<div class="clearfix">
  <div class="pull-left">
    <%= simple_format(h(@question.subject)) %>
  </div>
  <div>
    <% if @question.image? %>
      <%= link_to image_tag(@question.image_url(:thumb)), @question.image_url, class: 'pull-right' %>
    <% end -%>
  </div>
</div>
<%= render "/admin/questions/#{@question.class.name.underscore}/do_question", { question: @question } %>