<fieldset>
  <div class="control-group">
    <div class="row-fluid">
      <div class="span8">
        <label class="text required control-label"><%= b.check_box :correct %></label>
        <div class="controls">
          <%= b.text_area :content, { class: 'span12 can_preview', rows: 1, data: { preview: b.object.object_id } } %>
        </div>
      </div>
      <div class="span3" id="<%= b.object.object_id %>">
        <%= t('asciimath_preview') %>
      </div>
      <div class="span1">
        <%= b.hidden_field :_destroy %>
        <%= link_to raw('&times;'), '#', class: 'close remove_fields' %>
      </div>
    </div>
  </div>
  <div class="control-group question_image">
    <label class="control-label" for="question_image"><%= t("activerecord.attributes.question.image") %></label>
    <div class="controls">
      <div class="image">
        <% if b.object.image? %>
          <%= image_tag(b.object.image_url(:thumb)) %>
        <% end -%>
        <span class="upload-image">
          <%= b.file_field :image %>
        </span>
        <%= b.hidden_field :image_cache %>
      </div>
    </div>
  </div>
</fieldset>
