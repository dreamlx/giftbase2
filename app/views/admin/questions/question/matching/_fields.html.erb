<fieldset>
  <div class="row-fliud">
    <div class="span11">
      <div class="control-group">
        <div class="controls controls-row">
          <%= b.text_area :source, class: 'span5 can_preview', rows: 1, data: { preview: "source-#{b.object.object_id}" } %>
          <span class="span2 text-center"><i class="icon-resize-horizontal"></i></span>
          <%= b.text_area :target, class: 'span5 can_preview', rows: 1, data: { preview: "target-#{b.object.object_id}" } %>
        </div>

        <div class="controls controls-row">
          <div class="span5" id="source-<%= b.object.object_id %>">
            <%= t('asciimath_preview') %>
          </div>
          <div class="span2"></div>
          <div class="span5" id="target-<%= b.object.object_id %>">
            <%= t('asciimath_preview') %>
          </div>
        </div>
      </div>
    </div>
    <div class="span1">
      <%= b.hidden_field :_destroy %>
      <%= link_to raw('&times;'), '#', class: 'close remove_fields' %>
    </div>
  </div>
</fieldset>
