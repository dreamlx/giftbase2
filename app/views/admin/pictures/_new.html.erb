<div class="widget-content form-container">
  <%= simple_form_for([:admin, @imageable, @picture], html: { class: 'form-horizontal' }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :version %>
      <%= f.input :image %>
    </div>

    <div class="form-actions">
      <%= f.submit t('crud.upload'), class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
