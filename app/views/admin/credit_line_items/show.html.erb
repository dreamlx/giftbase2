<% content_for :title_bar do %>
  <h1><%= CreditLineItem.model_name.human %></h1>
  <div class="toolbar">
    <%= link_to t("back", scope: "crud"), admin_credit_line_items_path, class: 'btn' %>
  </div>
<% end %>

<dl class="dl-horizontal">
  <dt><%= Order.human_attribute_name(:created_at) %></dt>
  <dd><%= l(@order.created_at, format: :long) %></dd>
  <dt><%= Order.human_attribute_name(:number) %></dt>
  <dd><%= @order.number %></dd>
  <dt><%= Order.human_attribute_name(:user) %></dt>
  <dd><%= @order.user.email %></dd>
  <dt><%= Order.human_attribute_name(:credit_quantity) %></dt>
  <dd><%= @order.credit_quantity %></dd>
  <dt><%= Order.human_attribute_name(:total) %></dt>
  <dd><%= number_to_currency @order.total %></dd>
  <dt><%= Order.human_attribute_name(:state) %></dt>
  <dd><%= @order.human_state_name %></dd>
</dl>
