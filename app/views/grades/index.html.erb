<h1>选择你的年级</h1>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th><%= Grade.human_attribute_name(:position) %></th>
      <th><%= Grade.human_attribute_name(:name) %></th>
      <th><%= Grade.human_attribute_name(:description) %></th>
    </tr>
  </thead>
  <tbody>
    <% @grades.each do |grade| %>
      <tr>
        <td><%= link_to "#{grade.position}" ,grade_path(grade) %></td>
        <td><%= link_to "#{grade.name}" ,grade_path(grade)%></td>
        <td><%= grade.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>
